<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ms_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_restaurant_menu_24">

        </ImageView>

        <TextView
            android:id="@+id/ms_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/ms_image"
            android:layout_toRightOf="@id/ms_image"
            android:fontFamily="@font/baloo"
            android:text="McDonald's"
            android:textSize="20sp">

        </TextView>

        <RatingBar
            android:id="@+id/ms_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ms_text"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/ms_image"
            android:layout_toRightOf="@id/ms_image"
            android:rating="4">

        </RatingBar>

        <TextView
            android:id="@+id/ms_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ms_rating"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/ms_image"
            android:layout_toRightOf="@id/ms_image"
            android:padding="10dp"
            android:text="Boring long test used for trial purposes"></TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>