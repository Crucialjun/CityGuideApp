<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".ForgetPasswordSelectionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/muli_black"
            android:text="make Selection"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40dp">

        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:text="Select which contact detail should we use to reset your password"
            android:textColor="@color/black"
            android:textSize="18sp">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="@color/lightWhite"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_phone">

            </ImageView>

            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@id/mobile_icon"
                android:layout_toRightOf="@id/mobile_icon"
                android:fontFamily="@font/muli"
                android:text="Via Sms:"
                android:textColor="@color/black"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobile_title"
                android:layout_toEndOf="@id/mobile_icon"
                android:layout_toRightOf="@id/mobile_icon"
                android:fontFamily="@font/muli"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="+254722222222">

            </TextView>

            <Button
                android:id="@+id/btn_make_selection_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000">

            </Button>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="@color/lightWhite"
            android:padding="10dp">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_email">

            </ImageView>

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@id/email_icon"
                android:layout_toRightOf="@id/email_icon"
                android:fontFamily="@font/muli"
                android:text="Via Email:"
                android:textColor="@color/black"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_title"
                android:layout_toEndOf="@id/email_icon"
                android:layout_toRightOf="@id/email_icon"
                android:fontFamily="@font/muli"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="support@support.com">

            </TextView>

            <Button
                android:id="@+id/btn_make_selection_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000">

            </Button>


        </RelativeLayout>


    </LinearLayout>


</ScrollView>